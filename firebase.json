{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/weather",
        "function": "weather"
      },
      {
        "source": "/gurunavi",
        "function": "gurunavi"
      },
      {
        "source": "/entertainment",
        "function": "entertainment"
      },
      {
        "source": "/placelabel",
        "function": "placelabel"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
